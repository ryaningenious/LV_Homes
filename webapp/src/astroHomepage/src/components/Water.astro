---
const { reverse = false } = Astro.props;
---

<div id="water-section">
  <div class="h-[50vh] overflow-hidden relative">
    <video class="object-cover w-screen h-[50vh]" autoplay loop muted>
      <source
        src={`${
          import.meta.env.VITE_STATIC_FILE
        }/Ng6Pc2U3bUieXIiTMzD5Dw_whatsapp_video_2025_02_28_at_11_49_36_am.mp4`}
        type="video/mp4"
      />
    </video>
    <div
      class="size-full absolute top-0 right-0 left-0 bg-gradient-to-t from-deep-teal to-transparent"
    >
    </div>
    <div
      class="size-full absolute top-0 right-0 left-0 bg-gradient-to-b from-deep-teal from-[5%] to-transparent"
    >
      <div
        class="size-full absolute top-0 right-0 left-0 flex flex-col lg:flex-row justify-center lg:justify-between items-center gap-8 max-w-7xl mx-auto"
      >
        <div>
          <div
            class="text-3xl md:text-5xl text-center lg:text-left font-bold bg-gradient-to-r from-gold-300 via-gold-100 to-gold-200 bg-clip-text text-transparent"
          >
            Join Us Today!
          </div>
          <div class="text-xl md:text-3xl text-center md:text-left">
            Be a part of our journey and make a difference.
          </div>
        </div>
        <a href="/contact_us/Contact-Us"
          ><button
            class="bg-white text-deep-teal px-6 py-4 rounded-full text-lg font-semibold hover:scale-[1.1] duration-300 ease-in-out"
          >
            CONTACT US
          </button></a
        >
      </div>
    </div>
  </div>
</div>
